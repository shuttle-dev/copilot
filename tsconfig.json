{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*": [
				"./@types/*"
			]
		},
		"typeRoots": [
			"./@types",
			"./node_modules/@types"
		],
		"types": ["node", "jest"]
	},
	"include": [
		"action",
		"bin" ,
		"command",
		"global",
		"lib",
		"model",
		"prompt",
		"router",
		".eslintrc.js",
		"gulpfile.js",
		"gulp",
		"test"
	],
	"exclude": [
		"node_modules"
	],
}
